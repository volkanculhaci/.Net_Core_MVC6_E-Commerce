@model ecommerce.Models.AdminViewModel

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Products.First().Name">Name</label>
        <input asp-for="Products.First().Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Products.First().Description">Description</label>
        <input asp-for="Products.First().Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Products.First().CategoryId">Category</label>
        <select asp-for="Products.First().CategoryId" asp-items="Model.Categories" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Products.First().Price"></label>
        <input asp-for="Products.First().Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Products.First().StockQuantity"></label>
        <input asp-for="Products.First().StockQuantity" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Products.FirstOrDefault().ImageFile">Image File</label>
        <input type="file" asp-for="Products.FirstOrDefault().ImageFile" class="form-control" />
    </div>


    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
