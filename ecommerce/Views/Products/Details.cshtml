@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}
<style>
    /* Style for the container */
    .container {
        padding: 20px;
        background-color: #f5f5f5;
    }

    /* Style for the product name */
    .product-name {
        font-size: 28px;
        margin-bottom: 10px;
        color: #333;
    }

    /* Style for the product category */
    .product-category {
        font-size: 18px;
        color: #666;
    }

    /* Style for the product image */
    .product-image img {
        max-width: 100%;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Style for the product information */
    .product-info {
        font-size: 16px;
        color: #333;
    }

    /* Style for the product price */
    .product-price {
        color: #E91E63; /* Pink color */
        font-size: 24px;
    }

    /* Style for the add to cart button */
    .add-to-cart-button {
        margin-top: 20px;
        background-color: #E91E63; /* Pink color */
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 18px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .add-to-cart-button:hover {
        background-color: #ff4081; /* Light pink color */
    }

    /* Style for the product description */
    .product-description {
        margin-top: 20px;
    }

    .breadcrumb {
        font-size: 14px;
        margin-bottom: 10px;
    }

    .breadcrumb a {
        text-decoration: none;
        color: #007bff;
    }

    .separator {
        margin: 0 5px;
        color: #999; /* Define your separator color */
    }

        .quantity-input {
        font-size: 16px; /* Adjust the font size as needed */
        padding: 5px; /* Adjust the padding as needed */
        border: 1px solid #e0e0e0;
        border-radius: 5px;
    }
</style>
<div class="container">
    <div class="breadcrumb">
        <a href="@Url.Action("Index", "Products")">All Products</a>
        <span class="separator"> > </span>
        <a href="@Url.Action("Index", "Products", new { category = Model.Product.CategoryId })">@Model.CategoryName</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="product-image">
                <img src="~/images/@Model.Product.ImagePath" alt="@Model.Product.Name">
            </div>
        </div>
        <div class="col-md-8">
            <div class="product-details">
                <h1 class="product-name">@Model.Product.Name</h1>
                <p class="product-category">@Model.CategoryName</p>
                <dl class="product-info">
                    <dt>Price:</dt>
                    <dd class="product-price">@Model.Product.Price.ToString("C")</dd>
                    <dt>Stock Quantity:</dt>
                    <dd>@Model.Product.StockQuantity</dd>
                </dl>
                <form asp-controller="Cart" asp-action="AddItem" method="post">
                    <input type="hidden" name="id" value="@Model.Product.ProductId" />
                    <div class="form-group">
    <label for="quantity">Quantity:</label>
    <input type="number" class="form-control quantity-input" name="quantity" id="quantity" value="1" min="1" max="@Model.Product.StockQuantity" />
</div>
                    <button type="submit" class="btn btn-primary add-to-cart-button">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
    <div class="product-description">
        <h3>Description</h3>
        <p>@Model.Product.Description</p>
    </div>
</div>
