@using ecommerce.Models
@model List<CartItemViewModel>

<style>
    /* Apply styles to the cart container */
    .cart-container {
        background-color: #f5f5f5;
        padding: 20px;
        margin: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    /* Style the cart title */
    .cart-title {
        font-size: 28px;
        margin-bottom: 10px;
        color: #333;
    }

    /* Style the cart table */
    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

    .cart-table th {
        background-color: #f5f5f5;
        text-align: left;
        padding: 10px;
    }

    .cart-table td {
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

    /* Style the empty cart message */
    .empty-cart {
        font-style: italic;
        color: #777;
    }

    /* Style the cart total */
    .cart-total {
        font-size: 24px;
        font-weight: bold;
        color: #E91E63; /* Pink color */
        margin-top: 10px;
        text-align: right; /* Align the text to the right */
    }
</style>

<div class="cart-container">
    <div class="address-card">
        <h2>Shipping Address</h2>
        <p>
            Volkan Culhaci<br />
            123 Street<br />
            Ankara, Turkey<br />
            ZIP: 06000<br />
            Phone: +90 123 456 7890
        </p>
        <button class="btn btn-primary">Change Address</button>
    </div>




<div class="cart-container">
    <h1 class="cart-title">Shopping Cart Summary</h1>
    <table class="cart-table">
        <thead>
            <tr>
                <th></th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@item.ImagePath" alt="@item.ProductName" style="max-width: 100px;" />
                        </td>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Total.ToString("C")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="empty-cart">Your cart is empty.</td>
                </tr>
            }
        </tbody>
    </table>
    <p class="cart-total">Total: @Model.Sum(item => item.Total).ToString("C")</p>
<div>
    <form asp-controller="Cart" asp-action="PlaceOrder" method="post">
        <button type="submit" class="btn btn-primary float-right">Order Now</button>
    </form>
</div>

</div>
