@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}
                <style>
                    /* Style for the container */
.container {
    padding: 20px;
    background-color: #f5f5f5;
}

/* Style for the product name */
.product-name {
    font-size: 28px;
    margin-bottom: 10px;
    color: #333;
}

/* Style for the product category */
.product-category {
    font-size: 18px;
    color: #666;
}

/* Style for the product image */
.product-image img {
    max-width: 100%;
}

/* Style for the product information */
.product-info {
    font-size: 16px;
    color: #333;
}

/* Style for the product price */
.product-price {
    color: #E91E63; /* Pink color */
    font-size: 24px;
}

/* Style for the add to cart button */
.add-to-cart-button {
    margin-top: 10px;
    background-color: #E91E63; /* Pink color */
    color: #fff;
    border: none;
    padding: 10px 20px;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s;
}

.add-to-cart-button:hover {
    background-color: #ff4081; /* Light pink color */
}

/* Style for the product description */
.product-description {
    margin-top: 20px;
}

.breadcrumb {
    font-size: 14px;
    margin-bottom: 10px;
}

.breadcrumb a {
    text-decoration: none;
    color: #007bff;
}

.separator {
    margin: 0 5px;
    color: #999; /* Define your separator color */
}

/* Additional styling can be added as needed. */

</style>
<div class="container">
        <div class="breadcrumb">
        <a href="@Url.Action("Index", "Products")">All Products</a>
        <span class="separator"> > </span>
        <a href="@Url.Action("Index", "Products", new { category = Model.Product.CategoryId })">@Model.CategoryName</a>
    </div>

        <div class="row">
            <div class="col-md-12">
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="product-image">
                    <img src="https://cdn.cimri.io/image/1200x1200/razeroyuncumousefiyatlar_668446925.jpg" alt="@Model.Product.Name">
                    @* <img src="@Model.Product.ImageUrl" alt="@Model.Product.Name"> *@
                </div>
            </div>
            <div class="col-md-8">
                    <div class="product-details">
        <h1 class="product-name">@Model.Product.Name</h1>
                <dl class="product-info">
                    <dt>Price:</dt>
                    <dd class="product-price">@Model.Product.Price.ToString("C")</dd>
                    <dt>Stock Quantity:</dt>
                    <dd>@Model.Product.StockQuantity</dd>
                </dl>
            </div>
        </div>
        <br>
        <form asp-controller="Cart" asp-action="AddItem" method="post">
            <input type="hidden" name="id" value="@Model.Product.ProductId" />
            <div class="form-group">
                <label for="quantity">Quantity:</label>
                <input type="number" class="form-control" name="quantity" id="quantity" value="1" min="1" max="@Model.Product.StockQuantity" />
            </div>
            <br>
            <button type="submit" class="btn btn-primary add-to-cart-button">Sepete Ekle!</button>
        </form>
    </div>
    
    <br>
    <br>
    <div class="product-description">

        <h3>Description</h3>
        <p>@Model.Product.Description</p>
    </div>
</div>


