@model ProductDetailsViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <h1>@Model.Product.Name</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.Product.ImageUrl" class="img-fluid" alt="@Model.Product.Name">
        </div>
        <div class="col-md-8">
            <dl>
                <dt>Description:</dt>
                <dd>@Model.Product.Description</dd>
                <dt>Price:</dt>
                <dd>@Model.Product.Price.ToString("C")</dd>
                <dt>Category:</dt>
                <dd>@Model.CategoryName</dd>
            </dl>
        </div>
    </div>
</div>